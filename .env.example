# CRM Kilang Desa Murni Batik - Environment Variables
# ===================================================
# Copy this file to .env and update the values

# Application
APP_ENV=development
APP_DEBUG=true
APP_PORT=8080

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=crm_admin
DB_PASSWORD=crm_secret_password
DB_NAME=crm_main

# MongoDB
MONGODB_URI=mongodb://crm_admin:crm_secret_password@localhost:27017/crm_customers?authSource=admin

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=crm_redis_password

# RabbitMQ
RABBITMQ_URL=amqp://crm_admin:crm_rabbit_password@localhost:5672/crm_vhost

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=168h

# Jaeger Tracing
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Logging
LOG_LEVEL=debug

# SMTP (Email)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@crm.local

# Service URLs (for API Gateway)
IAM_SERVICE_URL=http://localhost:8081
CUSTOMER_SERVICE_URL=http://localhost:8082
SALES_SERVICE_URL=http://localhost:8083
NOTIFICATION_SERVICE_URL=http://localhost:8084

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=1m
